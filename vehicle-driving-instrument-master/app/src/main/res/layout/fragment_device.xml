<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="12dp"
    android:background="@color/bg_gary_5"
    tools:context=".Fragments.DeviceFragment">

    <RelativeLayout
        android:id="@+id/rlayout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:paddingEnd="16dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设备"
            android:textColor="@color/text_black"
            android:textSize="25sp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_more" />

    </RelativeLayout>

    <!--        &lt;!&ndash; 轮播图 &ndash;&gt;-->
    <!--        <com.zhpan.bannerview.BannerViewPager-->
    <!--            android:id="@+id/banner_device"-->
    <!--            android:layout_width="match_parent"-->
    <!--            android:layout_marginTop="20dp"-->
    <!--            android:layout_marginBottom="12dp"-->
    <!--            app:bvp_round_corner="24dp"-->
    <!--            app:bvp_scroll_duration="500"-->
    <!--            app:bvp_auto_play="false"-->
    <!--            app:bvp_indicator_visibility="invisible"-->
    <!--            android:layout_height="150dp" />-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.ujs.drivingapp.Component.SpreadView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:spread_center_color="@color/white"
            app:spread_center_radius="200"
            app:spread_delay_milliseconds="35"
            app:spread_distance="8"
            app:spread_max_radius="1000"
            app:spread_spread_color="@color/bg_gary_9" />

        <FrameLayout
            android:id="@+id/rlayout_device"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_devices"
            android:onClick="onScan" />
    </RelativeLayout>

</LinearLayout>


