<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="12dp"
    android:paddingStart="12dp"
    android:paddingEnd="16dp">

    <ImageView
        android:id="@+id/img_divide_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="@drawable/bg_divideline_gray" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="12月5日" />

    <ImageView
        android:id="@+id/img_statistic"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:src="@drawable/ic_drive"
        android:layout_below="@+id/tv_date"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/img_statistic"
        android:layout_alignTop="@+id/img_statistic"
        android:text="驾驶"
        android:textSize="12sp"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/tv_mileage_current"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/img_statistic"
        android:layout_alignBottom="@+id/img_statistic"
        android:text="0.24"
        android:textColor="@color/text_black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_mileage_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/tv_mileage_current"
        android:layout_alignBottom="@+id/tv_mileage_current"
        android:text="公里"
        android:textSize="12sp"
        android:textColor="@color/text_black"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="1dp" />

    <TextView
        android:id="@id/tv_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/tv_mileage_unit"
        android:layout_alignBottom="@id/tv_mileage_unit"
        android:text="00:03:55"
        android:textSize="12sp"
        android:textColor="@color/text_black"
        android:layout_marginStart="12dp" />

    <TextView
        android:id="@+id/tv_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/tv_duration"
        android:layout_alignBottom="@+id/tv_duration"
        android:text="10.82"
        android:textSize="12sp"
        android:textColor="@color/text_black"
        android:layout_marginStart="12dp" />

    <TextView
        android:id="@+id/tv_speed_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/tv_speed"
        android:layout_alignBottom="@+id/tv_speed"
        android:text="公里/小时"
        android:textSize="12sp"
        android:textColor="@color/text_black"
        android:layout_marginStart="4dp" />

    <TextView
        android:id="@+id/tv_time_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:text="12:08"
        android:textSize="12sp" />

</RelativeLayout>