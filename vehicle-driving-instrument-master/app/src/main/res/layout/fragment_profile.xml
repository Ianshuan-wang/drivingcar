<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_gary_5"
    tools:context=".Fragments.ProfileFragment">


    <RelativeLayout
        android:id="@+id/rlayout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:paddingStart="8dp"
        android:paddingEnd="16dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="12dp"
            android:layout_toStartOf="@+id/img_more"
            android:src="@drawable/ic_message" />


        <ImageView
            android:id="@+id/img_more"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_more" />

    </RelativeLayout>

    <com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:overScrollMode="never">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="20dp"
                    android:paddingTop="20dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="12dp">

                    <ImageView
                        android:id="@+id/img_avatar"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@drawable/at_boy_1" />

                    <TextView
                        android:id="@+id/tv_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="4dp"
                        android:layout_toEndOf="@+id/img_avatar"
                        android:text="15715293569"
                        android:textColor="@color/text_black"
                        android:textSize="18sp" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/tv_username"
                        android:layout_alignBottom="@+id/img_avatar"
                        android:background="@drawable/bg_corners_20"
                        android:paddingStart="2dp"
                        android:paddingEnd="2dp">

                        <ImageView
                            android:id="@+id/img_label"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_label" />

                        <TextView
                            android:id="@+id/tv_tag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@id/img_label"
                            android:letterSpacing="0.05"
                            android:paddingEnd="2dp"
                            android:text="新手司机"
                            android:textColor="@color/text_blue"
                            android:textSize="10sp" />

                    </RelativeLayout>


                </RelativeLayout>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:cardMaxElevation="0dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="@color/bg_blue"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="10dp"
                            app:cardUseCompatPadding="true"
                            app:contentPadding="0dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:background="@drawable/bg_glass"
                                android:paddingStart="12dp"
                                android:paddingEnd="12dp">

                                <ImageView
                                    android:id="@+id/img_level"
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:src="@drawable/bg_level" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="4dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_toEndOf="@+id/img_level"
                                    android:text="专享权益"
                                    android:textColor="@color/white_700"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />

                                <ProgressBar
                                    android:id="@+id/progress_level"
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:layout_width="240dp"
                                    android:layout_height="4dp"
                                    android:layout_below="@+id/img_level"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginBottom="8dp"
                                    android:max="100"
                                    android:progress="50"
                                    android:progressDrawable="@drawable/progress_style" />

                                <TextView
                                    android:id="@+id/tv_experience"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/progress_level"
                                    android:layout_marginStart="4dp"
                                    android:text="100"
                                    android:textColor="@color/white" />

                                <TextView
                                    android:id="@+id/tv_experience_max"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/progress_level"
                                    android:layout_marginStart="2dp"
                                    android:layout_marginTop="4dp"
                                    android:layout_toEndOf="@+id/tv_experience"
                                    android:text="/200"
                                    android:textColor="@color/white_700"
                                    android:textSize="10sp" />

                                <TextView
                                    android:id="@+id/tv_takeover"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/progress_level"
                                    android:layout_marginStart="12dp"
                                    android:layout_marginTop="4dp"
                                    android:layout_marginBottom="12dp"
                                    android:layout_toEndOf="@+id/tv_experience_max"
                                    android:text="超越62.63%的用户"
                                    android:textColor="@color/white_700"
                                    android:textSize="10sp" />

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/rv_permissions"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/tv_takeover" />
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_profile_options"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:padding="12dp">

                            <TextView
                                android:id="@+id/tv_review"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="驾驶回顾"
                                android:textStyle="bold"
                                android:textColor="@color/text_black" />

                            <TextView
                                android:id="@+id/tv_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_review"
                                android:layout_marginStart="2dp"
                                android:text="2022/3/7"
                                android:textSize="12sp" />

                            <ImageView
                                android:id="@+id/img_path"
                                android:layout_width="88dp"
                                android:layout_height="88dp"
                                android:layout_below="@id/tv_date"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/path" />

                            <TextView
                                android:id="@+id/tv_mileage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/img_path"
                                android:text="3.52"
                                android:textSize="24dp"
                                android:textStyle="bold"
                                android:textColor="@color/text_black"
                                android:layout_marginStart="2dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="公里"
                                android:textSize="12sp"
                                android:layout_marginStart="4dp"
                                android:layout_toEndOf="@+id/tv_mileage"
                                android:layout_alignBaseline="@+id/tv_mileage" />
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:padding="12dp">

                            <TextView
                                android:id="@+id/tv_housekeeper"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="驾驶管家"
                                android:textStyle="bold"
                                android:textColor="@color/text_black" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_below="@id/tv_housekeeper"
                                android:orientation="vertical"
                                android:layout_marginTop="8dp"
                                android:paddingStart="8dp"
                                android:paddingEnd="8dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center">

                                    <TextView
                                        android:id="@+id/tv_location"
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:layout_height="wrap_content"
                                        android:text="京口区"
                                        android:textSize="12sp" />

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:layout_height="wrap_content"
                                        android:gravity="right"
                                        android:text="阴 12℃"
                                        android:textSize="12sp" />
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/tv_current_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:text="19:43"
                                    android:textColor="@color/text_black"
                                    android:textSize="32sp" />

                                <TextView
                                    android:id="@+id/tv_current_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_below="@id/tv_housekeeper"
                                    android:text="3月7日 星期一"
                                    android:textSize="12sp" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical"
                                    android:layout_gravity="center"
                                    android:layout_margin="12dp">

                                    <ImageView
                                        android:layout_width="8dp"
                                        android:layout_height="8dp"
                                        android:src="@drawable/ic_dot_green" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="4dp"
                                        android:text="慢起步" />
                                </LinearLayout>


                            </LinearLayout>


                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="12dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/tv_more"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="更多"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="@color/text_black" />

                        <GridView
                            android:id="@+id/grid_more"
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:numColumns="4"
                            android:verticalSpacing="12dp"
                            android:layout_marginTop="12dp"
                            android:layout_below="@+id/tv_more" />
                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="《法律条款与平台规则》"
                    android:textSize="12sp"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="24dp" />


            </LinearLayout>

        </ScrollView>
    </com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout>
</LinearLayout>
