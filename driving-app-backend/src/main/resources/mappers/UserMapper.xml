<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ujs.drivingcar.mapper.UserMapper">
    <select id="findUserByPhone" resultType="User">
        select * from user where phone=#{phone}
    </select>
    <select id="findUserByEmail" resultType="User">
        select * from user where email=#{email}
    </select>
    
    <insert id="addUser" parameterType="com.ujs.drivingcar.pojo.User">
        insert into user (id,phone,email,password,expirical_value,registration_time) values (#{id},#{phone},#{email},#{password},#{expirical_value},#{registration_time})
    </insert>

    <select id="queryAll" resultType="User">
        select * from user
    </select>
</mapper>