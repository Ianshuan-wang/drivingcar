<?xml version="1.0" encoding="utf-8"?>

<com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/refreshLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_gary"
            android:orientation="vertical"
            tools:context=".Fragments.ChartFragment">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv_drive_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="驾驶情况"
                    android:textStyle="bold"
                    android:textColor="@color/text_black" />

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_below="@+id/tv_drive_status"
                    android:background="@color/white" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingTop="12dp"
                android:paddingBottom="20dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv_drive_fatigue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:layout_marginStart="12dp"
                    android:text="疲劳"
                    android:textSize="16sp"
                    android:textColor="@color/text_black" />

                <com.ujs.drivingapp.Component.CustomizedPieChart
                    android:id="@+id/pie_chart_fatigue"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:layout_below="@+id/tv_drive_fatigue"
                    android:background="@color/white" />

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/bar_chart_fatigue"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_below="@+id/pie_chart_fatigue"
                    android:background="@color/white" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv_drive_distraction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:layout_marginStart="12dp"
                    android:text="分心"
                    android:textSize="16sp"
                    android:textColor="@color/text_black" />

                <com.ujs.drivingapp.Component.CustomizedPieChart
                    android:id="@+id/pie_chart_distraction"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:layout_below="@+id/tv_drive_distraction"
                    android:background="@color/white" />

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/bar_chart_distraction"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_below="@+id/pie_chart_distraction"
                    android:background="@color/white" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv_drive_sentiment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:layout_marginStart="12dp"
                    android:text="情绪"
                    android:textSize="16sp"
                    android:textColor="@color/text_black" />

                <com.ujs.drivingapp.Component.CustomizedPieChart
                    android:id="@+id/pie_chart_sentiment"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:layout_below="@+id/tv_drive_sentiment"
                    android:background="@color/white" />

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/bar_chart_sentiment"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_below="@+id/pie_chart_sentiment"
                    android:background="@color/white" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="12dp"
                android:text="@string/tv_deviation" />

        </LinearLayout>


    </ScrollView>
</com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout>

