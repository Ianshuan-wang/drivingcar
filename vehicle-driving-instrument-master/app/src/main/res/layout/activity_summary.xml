<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.SummaryActivity"
    android:orientation="vertical">

    <com.ujs.drivingapp.Component.LoadingView
        android:id="@+id/loading_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/rlayout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingStart="20dp"
        android:paddingTop="12dp"
        android:paddingEnd="28dp">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:onClick="onNavBack"
            android:src="@drawable/ic_arrow_left_black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/img_back"
            android:text="驾驶记录"
            android:textColor="@color/text_black"
            android:textSize="20sp" />

    </RelativeLayout>
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="12dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="200dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:tabIndicatorColor="@color/theme_orange"
        app:tabTextColor="@color/text_black"
        app:tabSelectedTextColor="@color/theme_orange"
        app:tabRippleColor="@color/transparent"
        app:tabPaddingBottom="5dp"
        app:tabIndicator="@drawable/tab_indicator"
        app:tabTextAppearance="@style/tab_text"
        app:tabIndicatorAnimationMode="elastic"
        app:tabIndicatorAnimationDuration="500" />

    <!--    <androidx.viewpager.widget.ViewPager-->
    <!--        android:id="@+id/pager_summary"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        app:layout_constraintTop_toBottomOf="@+id/tab_layout"-->
    <!--        />-->


    <com.ujs.drivingapp.Component.NoScrollViewPager
        android:id="@+id/pager_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tab_layout" />


</LinearLayout>