<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_orange"
    android:scrollbars="none"
    android:overScrollMode="never">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        tools:context=".Activities.PunchActivity">


        <RelativeLayout
            android:id="@+id/rlayout_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:paddingStart="8dp"
            android:paddingEnd="16dp">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="12dp"
                android:src="@drawable/ic_arrow_left"
                android:onClick="onNavBack" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/img_back"
                android:layout_centerVertical="true"
                android:text="我的签到"
                android:textSize="20sp"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/img_more"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_more_white" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">

            <TextView
                android:id="@+id/tv_exp_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="总经验值"
                android:textColor="@color/white"
                android:textSize="18sp" />
            <!--            <ImageView-->
            <!--                android:layout_width="128dp"-->
            <!--                android:layout_height="128dp"-->
            <!--                android:layout_below="@+id/tv_exp_title"-->
            <!--                android:src="@drawable/bg_experience"-->
            <!--                android:layout_centerHorizontal="true"/>-->
            <TextView
                android:id="@id/tv_exp_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_exp_title"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="100"
                android:textColor="@color/theme_orange"
                android:textSize="48sp" />

            <TextView
                android:id="@+id/tv_next_grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_exp_total"
                android:text="距离下一级还差"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/tv_next_grade"
                android:layout_alignBottom="@+id/tv_next_grade"
                android:layout_marginStart="12dp"
                android:text="100"
                android:textColor="@color/white" />

            <ProgressBar
                android:id="@+id/progress_level"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="200dp"
                android:layout_height="4dp"
                android:layout_below="@+id/tv_next_grade"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:max="100"
                android:progress="50"
                android:progressDrawable="@drawable/progress_style" />

            <TextView
                android:id="@+id/tv_experience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/progress_level"
                android:layout_marginStart="4dp"
                android:text="100"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_experience_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/progress_level"
                android:layout_marginStart="2dp"
                android:layout_marginTop="4dp"
                android:layout_toEndOf="@+id/tv_experience"
                android:text="/200"
                android:textColor="@color/white_700"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_takeover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/progress_level"
                android:layout_marginStart="12dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="12dp"
                android:layout_toEndOf="@+id/tv_experience_max"
                android:text="超越62.63%的用户"
                android:textColor="@color/white_700"
                android:textSize="10sp" />

            <LinearLayout
                android:id="@+id/tv_punch_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignTop="@+id/progress_level"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="-12dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/bg_corners_20">

                <ImageView
                    android:id="@+id/img_exp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_experience_orange" />

                <TextView
                    android:id="@+id/tv_punch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_task_name"
                    android:layout_toEndOf="@+id/img_exp"
                    android:layout_alignBottom="@id/img_exp"
                    android:layout_marginStart="4dp"
                    android:text="签到"
                    android:textColor="@color/theme_orange" />
            </LinearLayout>
        </RelativeLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            android:layout_marginTop="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已签到" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:text="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="天" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_punch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:overScrollMode="never"
                    android:scrollbars="none" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="新手任务" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/llayout_task"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:overScrollMode="never"
                    android:scrollbars="none" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>